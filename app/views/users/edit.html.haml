%main.container
  %h1.general-title-margin= t('settings.settings')
  %ul.nav.clearfix.mb-20{role: "tablist"}
    %li.tab-item{role: "presentation"}
      = link_to t('settings.address'), settings_addresses_path, class: 'tab-link'
    %li.tab-item{role: "presentation"}
      = link_to t('settings.privacy'), settings_privacy_path, class: 'tab-link filter-link active'
  .tab-content
    .row.mb-60
      .col-sm-5
        = render 'users/edit_email'
      .col-sm-5.col-sm-offset-1
        = render 'users/edit_password'
      .col-sm-12
        = render 'users/remove_account'
